{
  "manifest_version": 2,
  "name": "Go to Trello List",
  "description": "Show a list of a Trello board's lists",
  "version": "1.0",
  "icons": {
    "48": "gttl.svg",
    "96": "gttl.svg"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "go-to-trello-list@lionelw"
    }
  },
  "browser_action": {
    "default_popup": "popup.html",
    "browser_style": true
  },
  "content_scripts": [
    {
      "matches": ["*://trello.com/b/*"],
      "js": ["content.js"]
    }
  ],
  "page_action": {
    "default_popup": "popup.html",
    "browser_style": true,
    "default_icon": {
      "48": "gttl.svg",
      "96": "gttl.svg"
    },
    "show_matches": ["*://trello.com/b/*"]
  },
  "commands": {
    "_execute_page_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+L"
      }
    }
  }
}
